<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="16dp"
    android:background="@android:color/white">

    <Switch
        android:id="@+id/swt_reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/swt_reminder"
        android:text="10:25"
        android:textColor="@android:color/black"
        android:textSize="22sp" />

    <ImageView
        android:id="@+id/img_discard"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignEnd="@+id/swt_reminder"
        android:layout_below="@+id/swt_reminder"
        android:layout_marginTop="25dp"
        app:srcCompat="@drawable/ic_action_discard" />

    <TextView
        android:id="@+id/txt_repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txt_time"
        android:layout_alignTop="@+id/img_discard"
        android:text="Repeat"
        android:textColor="@android:color/black"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/txt_date_repeat"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/txt_repeat"
        android:layout_below="@id/txt_repeat"
        android:text="TextView" />
</RelativeLayout>